<hibernate-mapping>
	<class name="com.yongjun.tdms.model.workflow.Workflow" table="t_workflow">
		<id name="id" column="Id" type="long">
			<generator class="native">
				<param name="sequence">t_workflow_sequence</param>
				<param name="parameters">START WITH 1000</param>
			</generator>
		</id>
		
		<version name="version" column="VERSION" type="long"/>
		
		<property name="code" type="string">
            <column name="CODE" not-null="true" sql-type="NVARCHAR(20)" unique-key="UK_Workflow"/>
        </property>
        
        <property name="name" type="string">
			<column name="NAME" not-null="true" sql-type="NVARCHAR(20)" />
		</property>
		
		<many-to-one name="flow" class="com.yongjun.tdms.model.workflow.Flow">
			<column name="FLOW" not-null="false" />
		</many-to-one>
		
		<many-to-one name="department" class="com.yongjun.pluto.model.security.Department">
			<column name="DEPT" not-null="false" />
		</many-to-one>

		<many-to-one name="affectObject" class="com.yongjun.pluto.model.codevalue.CodeValue">
			<column name="AFFECT_OBJECT" not-null="true"/>
		</many-to-one>
		
        <property name="openOrNot" type="int">
            <column name="OPEN_ORNOT" not-null="true"/>
        </property>
        
        <property name="remark" type="string">
			<column name="REMARK" not-null="false" sql-type="NVARCHAR(500)" />
		</property>
        
        <property name="disabled" type="boolean">
            <column name="DISABLED" not-null="true"/>
        </property>
		<property name="createdTime" column="CREATED_TIME" type="timestamp"/>
        <property name="creator"  column="CREATOR" type="string" length="40"/>
        <property name="lastModifiedTime" column="LAST_MODIFIED_TIME" type="timestamp"/>
        <property name="lastOperator" column="LAST_OPERATOR" type="string" length="40"/>
        <many-to-one name="organization" class="com.yongjun.pluto.model.security.Organization">
			<column name="ORG_ID"/>
		</many-to-one>
	</class>
</hibernate-mapping>