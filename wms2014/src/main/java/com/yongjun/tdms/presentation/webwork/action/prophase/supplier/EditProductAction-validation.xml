<?xml version="1.0" encoding="UTF-8"?>
   <!DOCTYPE validators PUBLIC
        "-//OpenSymphony Group//XWork Validator 1.0//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.dtd">

<!-- $Id: EditCheckPointProcAction-validation.xml 7961 2007-10-23 07:03:11Z qsun $ -->
<validators>
    <field name="product.name">
        <field-validator type="requiredstring">
            <message key="product.name.requiredstring"/>
        </field-validator>
        <field-validator type="stringlength">
            <param name="minLength">0</param>
            <param name="maxLength">50</param>
            <message key="product.name.maxLength"/>
        </field-validator>
	</field>
	<field name="product.modelNo">      
        <field-validator type="stringlength">
            <param name="minLength">0</param>
            <param name="maxLength">50</param>
            <message key="product.modelNo.maxLength"/>
        </field-validator>
	</field>
	<field name="product.category">      
        <field-validator type="stringlength">
            <param name="minLength">0</param>
            <param name="maxLength">50</param>
            <message key="product.category.maxLength"/>
        </field-validator>
	</field>
	<field name="product.spec">      
        <field-validator type="stringlength">
            <param name="minLength">0</param>
            <param name="maxLength">50</param>
            <message key="product.spec.maxLength"/>
        </field-validator>
	</field>	
</validators>